{
  "name": "playwright-testing-framework",
  "version": "1.0.0",
  "description": "Playwright Testing Framework with TypeScript",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "report": "allure generate ./allure-results --clean && allure open ./allure-report"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.17.18",
    "allure-playwright": "^2.15.1",
    "dotenv": "^16.4.7",
    "js-yaml": "^4.1.0",
    "typescript": "^5.7.3"
  },
  "main": "index.js",
  "directories": {
    "test": "tests"
  }
}
